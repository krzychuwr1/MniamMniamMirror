@model IEnumerable<MniamMniam.Models.CookBookModels.Recipe>

    @{
        ViewData["Title"] = "advancedSearch";
    }

    <h2>advancedSearch</h2>




    @using (Html.BeginForm("advancedSearch", "Recipes", FormMethod.Get))
    {

        <p>Name @Html.TextBox("Name", "") </p>

        <p>Description @Html.TextBox("Text", "")</p>

        <p>Author @Html.TextBox("UserName", "") </p>

        <input type="submit" value="Search" />

    }
    <a asp-action="Index">back</a>


    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Text)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ApplicationUser)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Text)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ApplicationUser.UserName)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
