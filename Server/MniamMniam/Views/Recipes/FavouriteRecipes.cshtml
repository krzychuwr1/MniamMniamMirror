@model IEnumerable<MniamMniam.Models.CookBookModels.Recipe>

<h2>Favourite recipes</h2>


<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Text)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Tags)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TextTrimmed)
            </td>
            <td>
                @string.Join(" ", item.Tags.Select(tag => tag.Tag.Name))
            </td>
            <td>
                
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="RemoveFavourite" asp-route-id="@item.Id">Remove favourite</a>
            </td>
        </tr>
}
    </tbody>
</table>
