@model MniamMniam.ViewModels.CreateRecipeViewModel
@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Recipe</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">    
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Text" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="Text" class="form-control" cols="40" rows="10"></textarea>
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2 control-label">Tags</label>
            <select asp-for="SelectedTags" multiple="multiple" asp-items="@Model.AllTags">
                <option>Please select tags</option>
            </select>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">Ingredient</label>
            <select asp-for="SelectedIngredient1" asp-items="@Model.AllIngredients">
                <option>Please select one</option>
            </select>
            <input asp-for="SelectedIngredientAmount1"/>
        </div>

        <div class="form-group">
            <label class="col-md-2 control-label">Ingredient</label>
            <select asp-for="SelectedIngredient2" asp-items="@Model.AllIngredients">
                <option>Please select one</option>
            </select>
            <input asp-for="SelectedIngredientAmount2"/>
        </div>

        <div class="form-group">
            <label class="col-md-2 control-label">Ingredient</label>
            <select asp-for="SelectedIngredient3" asp-items="@Model.AllIngredients">
                <option>Please select one</option>
            </select>
            <input asp-for="SelectedIngredientAmount3"/>
        </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
