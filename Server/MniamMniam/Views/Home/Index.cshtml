@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/banner1.png" alt="Mniam Mniam" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p style="color:dodgerblue">
                    Share your recipes with your friends!
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner1.png" alt="Mniam Mniam" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p style="color:dodgerblue">
                    Or don't! And keep them all to yourself.
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-6">
        <h2>Why use our app?</h2>
        <ul>
            <li>You can share your recipes instantly</li>
            <li>You can access other recipes</li>
            <li>You can tag your recipes to make them easier to find!</li>
        </ul>
    </div>
    <div class="col-md-6">
        <h2>How to</h2>
        <ul>
            <li>Log in using your e-mail or google account</li>
            <li>Then you can access recipes, ingredients and tags</li>
            <li>Create recipes!</li>
        </ul>
    </div>
</div>
